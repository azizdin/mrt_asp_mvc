@model MRTmvc.Models.Route

@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<link href="~/Content/css/print.css" rel="stylesheet" MEDIA="print" />

@using (Html.BeginForm())
{
<div class="container">
    <table class="table table-striped table-bordered" id="test1">
        <thead class="thead-dark">
            <tr>
                <th scope="col" colspan="2" class=" text-center"> Details </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td> Username </td>
                <td>  @ViewBag.Username  </td>
            </tr>

            <tr>
                <td> Email </td>
                <td>  @ViewBag.Email </td>
            </tr>

            <tr>
                <td> NRIC / Paasport </td>
                <td>  @ViewBag.Nric  </td>
            </tr>
            <tr>
                <td> Trip type </td>
                <td>  @Model.tripType </td>
            </tr>

            <tr>
                <td> Station From </td>
                <td>  @ViewBag.StationFrom </td>
            </tr>

            <tr>
                <td> Station To </td>
                <td>  @ViewBag.StationTo </td>
            </tr>

            <tr>
                <td> Number of pax </td>
                <td>  @ViewBag.NumTicket person</td>
            </tr>


            <tr>
                <td> Passenger category </td>
                <td>  @ViewBag.LCategory</td>
            </tr>

            <tr>
                <td> Discount Rate </td>
                <td>  @ViewBag.DiscountPercent </td>
            </tr>

            <tr>
                <td> Date purchase </td>
                <td>  @ViewBag.DateTime </td>
            </tr>

            <tr>
                <td> Total Price  </td>
                <td>  @ViewBag.Charge.ToString("RM 0.00") </td>
            </tr>
        </tbody>
    </table>

    @Html.HiddenFor(x => x.UserID, new { id = "tripType", Value = ViewBag.RegId })
    @Html.HiddenFor(x => x.tripType, new { id = "tripType", Value = Model.tripType })
    @Html.HiddenFor(x => x.StationFrom, new { id = "StationFrom", Value = ViewBag.StationFrom })
    @Html.HiddenFor(x => x.StationTo, new { id = "StationTo", Value = ViewBag.StationTo })
    @Html.HiddenFor(x => x.StationTo, new { id = "StationTo", Value = ViewBag.StationTo })
    @Html.HiddenFor(x => x.NumTicket, new { id = "NumTicket", Value = ViewBag.NumTicket })
    @Html.HiddenFor(x => x.LevelCategory, new { id = "LevelCategory", Value = ViewBag.LCategory })
    @Html.HiddenFor(x => x.DiscountPercent, new { id = "DiscountPercent", Value = ViewBag.DiscountPercent })
    @Html.HiddenFor(x => x.DateTime, new { id = "DateTime", Value = ViewBag.DateTime })
    @Html.HiddenFor(x => x.Charge, new { id = "Charge", Value = ViewBag.Charge })



    <div class="d-flex justify-content-center"> <a style="margin:5px;" class="btn btn-primary" href="@Url.Action("Index", "Home")">Cancel</a> <input type="submit" value="Confirm" class="btn btn-primary" formaction="@Url.Action("thanks")" style="margin:5px;" /></div>
</div>
}



